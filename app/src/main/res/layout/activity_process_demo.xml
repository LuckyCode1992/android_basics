<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".process.ProcessDemoActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_RPC"
                    style="@style/TextArea.h_wrap"/>

            <View
                    style="@style/line"/>

            <TextView
                    android:id="@+id/tv_IDL"
                    style="@style/TextArea.h_wrap"/>

            <View
                    style="@style/line"/>

            <TextView
                    android:id="@+id/tv_IPC"
                    style="@style/TextArea.h_wrap"/>

            <View
                    style="@style/line"/>

            <TextView
                    android:id="@+id/tv_Android"
                    style="@style/TextArea.h_wrap"/>

            <View
                    style="@style/line"/>

            <TextView
                    android:id="@+id/tv_AIDL"
                    style="@style/TextArea.h_wrap"/>

            <TextView
                    android:id="@+id/tv_AIDL_code"
                    style="@style/TextArea.h_wrap"/>

            <Button
                    android:id="@+id/btn_bind_service"
                    android:text="绑定服务"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btn_test_aidl"
                    android:text="测试aidl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_AIDL_result"
                    android:text="aidl结果："
                    style="@style/TextArea.h_wrap"/>

            <View
                    style="@style/line"/>

            <TextView
                    android:id="@+id/tv_Binder"
                    style="@style/TextArea.h_wrap"/>

            <View
                    style="@style/line"/>
            <TextView
                    android:id="@+id/tv_Messenger"
                    style="@style/TextArea.h_wrap"/>
            <Button
                    android:id="@+id/btn_bind_messenger"
                    android:text="绑定messenger服务"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/btn_test_messenger"
                    android:text="测试messenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_Messenger_result"
                    android:text="Messenger结果："
                    style="@style/TextArea.h_wrap"/>
            <View
                    style="@style/line"/>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>